<?xml version="1.0" encoding="utf-8" ?>

<routes>
    <!--FrontEnd -->
    <route path="/" action="home" controller="FrontController"/>
    <route path="user-post" action="showUserPost" controller="PostController"/>

    <route path="post" action="showPost" controller="PostController" params="id"/>

    <route path="add-comment" action="addComment" controller="PostController" params="id"/>
    <route path="add-post" action="addPost" controller="PostController"/>
    <route path="submit-add-post" action="submitPost" controller="PostController"/>
    <route path="submit-add-comment" action="submitComment" controller="PostController"/>
    
    <!--Security-->
    <route path="login" action="login" controller="SecurityController"/>
    <route path="login-function" action="loginFunction" controller="SecurityController"/>
    <route path="register" action="register" controller="SecurityController"/>
    <route path="register-function" action="registerFunction" controller="SecurityController"/>
    <route path="logout" action="logout" controller="SecurityController"/>

    <!--Admin  -->
    <route path="admin" action="admin" controller="AdminController"/>
    <route path="admin-delete-user" action="deleteUser" controller="AdminController"/>


    <!-- User -->
    <route path="user" action="user" controller="UserController"/>
    <route path="user-update" action="updateUser" controller="UserController"/>


</routes>